{{#if poster_path}}
<img class="movie-info__img" src="https://image.tmdb.org/t/p/w500/{{poster_path}}" alt="{{original_title}}">
{{else}}
<img class="movie-info__img" src="https://cinemaone.net/images/movie_placeholder.png" alt='placeholder' />
{{/if}}
<div class="movie-info__data">
    <h1 class="movie-info__title">{{original_title}}</h1>
    <table class="movie-info__table">
        <tr>
            <th class="movie-info__parameter">Vote / Votes</th>
            <th class="movie-info__value">
                <span class="movie-info__value--rating">{{vote_average}}</span>
                <span class="movie-info__value--devider">&nbsp;/</span>
                <span class="movie-info__value--votes">{{vote_count}}</span>
            </th>
        </tr>
        <tr>
            <td class="movie-info__parameter">Popularity</td>
            <td class="movie-info__value">{{popularity}}</td>
        </tr>
        <tr>
            <td class="movie-info__parameter">Original Title</td>
            <td class="movie-info__value--title">{{original_title}}</td>
        </tr>
        <tr>
            <td class="movie-info__parameter">Genre</td>
            <td class="movie-info__value">Western</td>
        </tr>
    </table>
    <h2 class="movie-info__about">about</h2>
    <p class="movie-info__text">{{overview}}</p>
    <div class="movie-info__buttons-wrapper">
        {{#if watched}}
        <button class="movie-info__button-add-to-watched movie-info__button-add-to-watched__pressed lightbox-add-to-watched-btn-js" data-id="{{id}}">
            </button>
        {{else}} 
        <button class="movie-info__button-add-to-watched movie-info__button-add-to-watched__unpressed lightbox-add-to-watched-btn-js" data-id="{{id}}">
            </button>
        {{/if}}   
        
        {{#if queue}}
        <button class="movie-info__button-add-to-queue lightbox-add-to-queue-btn-js movie-info__button-add-to-queue__pressed" data-id="{{id}}">
            </button>
        {{else}} 
        <button class="movie-info__button-add-to-queue lightbox-add-to-queue-btn-js movie-info__button-add-to-queue__unpressed" data-id="{{id}}">
            </button>
        {{/if}} 
    </div>
</div>