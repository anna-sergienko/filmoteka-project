{{#each this}}
<li class='card__item'>
    <a class='card__lightbox lightbox-open-js'>
        {{#if poster_path}}
        <img class='card__img' src='https://image.tmdb.org/t/p/w300{{poster_path}}' alt='{{title}}' />
        {{else}}
        <img class='card__img' src="https://cinemaone.net/images/movie_placeholder.png" alt='placeholder' />
        {{/if}}
        <div class='card__info'>
            <p class='card__title'>{{original_title}}</p>
            <p class='card__text'>
                <span class='card__text--genre'>{{genre_ids}}</span><span>&nbsp;|&nbsp;</span>
                <span class='card__text--date'>{{release_date}}</span>
                <span class='card__rating'>{{vote_average}}</span>
            </p>
        </div>
    </a>
</li>
{{/each}}